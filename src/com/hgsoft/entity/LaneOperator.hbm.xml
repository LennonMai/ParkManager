<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.hgsoft.entity.LaneOperator" table="tb_Operator">
        <id name="operatorNo" type="java.lang.Integer">
            <column name="OperatorNo" />
            <generator class="assigned" />
        </id>
        <property name="areaNo" type="java.lang.Short">
            <column name="AreaNo" />
        </property>
        <property name="parkNo" type="java.lang.Short">
            <column name="ParkNo" />
        </property>
        <property name="operatorName" type="java.lang.String">
            <column name="OperatorName" length="8" />
        </property>
        <property name="opCardId" type="java.lang.String">
            <column name="OpCardID" length="16" />
        </property>
        <property name="opCardNo" type="java.lang.Integer">
            <column name="OpCardNO" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="Password" length="6" />
        </property>
        <property name="status" type="java.lang.String">
            <column name="Status" length="1" />
        </property>
    </class>
</hibernate-mapping>
